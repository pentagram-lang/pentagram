{
  "json": {
    "lineWidth": 75,
    "indentWidth": 2,
    "useTabs": false,
    "newLineKind": "lf",
    "trailingCommas": "jsonc"
  },
  "markdown": {
    "lineWidth": 75,
    "textWrap": "never",
    "newLineKind": "lf"
  },
  "toml": {
    "lineWidth": 75,
    "indentWidth": 2,
    "useTabs": false,
    "newLineKind": "lf",
    "cargo.applyConventions": true
  },
  "excludes": [
    "**/*.rs",
    "**/*.py",
    "**/*.penta",
    "**/target",
    "Cargo.lock",
    "flake.lock"
  ],
  "plugins": [
    "https://plugins.dprint.dev/json-0.21.0.wasm",
    "https://plugins.dprint.dev/markdown-0.20.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm"
  ]
}
